@model IEnumerable<ToursAndTravelsManagement.Models.Cab>
@{
    ViewData["Title"] = "Manage Cabs";
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Manage Cabs</h5>
                    <a href="@Url.Action("CreateCab", "AdminCab")" class="btn btn-light btn-sm">
                        <i class="ri-add-line me-1"></i> Add New Cab
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (TempData["Error"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["Error"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>ID</th>
                                    <th>Cab Name</th>
                                    <th>Type</th>
                                    <th>Reg. No.</th>
                                    <th>Capacity</th>
                                    <th>AC</th>
                                    <th>Status</th>
                                    <th>Price/KM</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var cab in Model)
                                {
                                    <tr>
                                        <td>@cab.CabId</td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(cab.ImageUrl))
                                                {
                                                    <img src="@cab.ImageUrl" class="rounded me-2" width="40" height="40" alt="@cab.Name">
                                                }
                                                else
                                                {
                                                    <div class="bg-light rounded me-2 d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                        <i class="ri-taxi-line"></i>
                                                    </div>
                                                }
                                                <div>
                                                    <strong>@cab.Name</strong>
                                                    <div class="small text-muted">@cab.Model</div>
                                                </div>
                                            </div>
                                        </td>
                                        <td>@cab.Type.ToString()</td>
                                        <td>@cab.RegistrationNumber</td>
                                        <td>@cab.SeatingCapacity</td>
                                        <td>
                                            @if (cab.HasAC)
                                            {
                                                <span class="badge bg-success">Yes</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">No</span>
                                            }
                                        </td>
                                        <td>
                                            @{
                                                var statusBadge = cab.Status.ToString() switch
                                                {
                                                    "Available" => "bg-success",
                                                    "Booked" => "bg-primary",
                                                    "Maintenance" => "bg-warning",
                                                    "Unavailable" => "bg-danger",
                                                    _ => "bg-secondary"
                                                };
                                            }
                                            <span class="badge @statusBadge">@cab.Status.ToString()</span>
                                        </td>
                                        <td>₹@cab.BasePricePerKM</td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="@Url.Action("EditCab", "AdminCab", new { id = cab.CabId })"
                                                   class="btn btn-outline-primary">
                                                    <i class="ri-edit-line"></i>
                                                </a>
                                                <button type="button" class="btn btn-outline-danger delete-cab"
                                                        data-id="@cab.CabId" data-name="@cab.Name">
                                                    <i class="ri-delete-bin-line"></i>
                                                </button>
                                                <a href="@Url.Action("ToggleCabStatus", "AdminCab", new { id = cab.CabId })"
                                                   class="btn @(cab.IsActive ? "btn-outline-warning" : "btn-outline-success")">
                                                    <i class="@(cab.IsActive ? "ri-eye-off-line" : "ri-eye-line")"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Delete cab confirmation
        document.querySelectorAll('.delete-cab').forEach(btn => {
            btn.addEventListener('click', function () {
                const cabId = this.dataset.id;
                const cabName = this.dataset.name;

                if (confirm(`Are you sure you want to delete "${cabName}"?`)) {
                    fetch(`@Url.Action("DeleteCab", "AdminCab")/${cabId}`, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    }).then(response => {
                        if (response.ok) {
                            location.reload();
                        }
                    });
                }
            });
        });
    </script>
}