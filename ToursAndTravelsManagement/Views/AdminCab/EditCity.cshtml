@{
}
@model ToursAndTravelsManagement.Models.City
@{
    ViewData["Title"] = "Edit City";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="ri-edit-line me-2"></i> Edit City: @Model.Name
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="EditCity" method="post">
                        <input type="hidden" asp-for="CityId" />

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="Name" class="form-label">City Name *</label>
                                <input asp-for="Name" class="form-control" required>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="State" class="form-label">State *</label>
                                <input asp-for="State" class="form-control" required>
                                <span asp-validation-for="State" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Country" class="form-label">Country *</label>
                                <input asp-for="Country" class="form-control" required>
                                <span asp-validation-for="Country" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="form-check mt-4">
                                    <input asp-for="IsPopular" class="form-check-input" type="checkbox">
                                    <label asp-for="IsPopular" class="form-check-label">Mark as Popular City</label>
                                </div>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="Description" class="form-label">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="ImageUrl" class="form-label">Image URL</label>
                                <input asp-for="ImageUrl" class="form-control" type="url">
                                <span asp-validation-for="ImageUrl" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="PopularPlaces" class="form-label">Popular Places (JSON array)</label>
                                <textarea asp-for="PopularPlaces" class="form-control" rows="3"></textarea>
                                <small class="text-muted">Enter popular tourist places as JSON array</small>
                                <span asp-validation-for="PopularPlaces" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("ManageCities", "AdminCab")" class="btn btn-secondary">
                                <i class="ri-arrow-left-line me-2"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="ri-save-line me-2"></i> Update City
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>