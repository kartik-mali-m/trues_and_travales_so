@model IEnumerable<ToursAndTravelsManagement.Models.CabBooking>
@{
    ViewData["Title"] = "Manage Bookings";
    var statusFilter = ViewBag.StatusFilter as string;
}

<div class="container-fluid py-4">
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Manage Bookings</h5>
                </div>
                <div class="card-body">
                    <!-- Status Filter -->
                    <div class="row mb-4">
                        <div class="col-12">
                            <div class="btn-group" role="group">
                                <a href="@Url.Action("ManageBookings", new { status = "" })"
                                   class="btn @(string.IsNullOrEmpty(statusFilter) ? "btn-primary" : "btn-outline-primary")">
                                    All
                                </a>
                                @foreach (var status in Enum.GetValues(typeof(ToursAndTravelsManagement.Enums.CabBookingStatus)))
                                {
                                    var statusName = status.ToString();
                                    <a href="@Url.Action("ManageBookings", new { status = statusName })"
                                       class="btn @(statusFilter == statusName ? "btn-primary" : "btn-outline-primary")">
                                        @statusName
                                    </a>
                                }
                            </div>
                        </div>
                    </div>

                    @if (TempData["Success"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["Success"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!Model.Any())
                    {
                        <div class="text-center py-4">
                            <i class="ri-booking-line display-4 text-muted mb-3"></i>
                            <h4 class="text-muted">No Bookings Found</h4>
                            <p class="text-muted">No bookings match the current filter.</p>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Booking ID</th>
                                        <th>Customer</th>
                                        <th>Route</th>
                                        <th>Travel Date</th>
                                        <th>Cab</th>
                                        <th>Amount</th>
                                        <th>Status</th>
                                        <th>Payment</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var booking in Model)
                                    {
                                        <tr>
                                            <td>
                                                <strong>@booking.BookingNumber</strong><br>
                                                <small class="text-muted">@booking.CreatedDate.ToString("dd MMM yyyy")</small>
                                            </td>
                                            <td>
                                                @if (!string.IsNullOrEmpty(booking.User?.UserName))
                                                {
                                                    <div>@booking.User.UserName</div>
                                                    <small class="text-muted">@booking.User.Email</small>
                                                }
                                                else
                                                {
                                                    <div>@booking.GuestName</div>
                                                    <small class="text-muted">@booking.GuestEmail</small>
                                                }
                                                <div class="small">@booking.GuestPhone</div>
                                            </td>
                                            <td>
                                                @booking.CabRoutePrice?.Route?.FromCity?.Name →
                                                @booking.CabRoutePrice?.Route?.ToCity?.Name<br>
                                                <small class="text-muted">@booking.PickupTime.ToString(@"hh\:mm")</small>
                                            </td>
                                            <td>@booking.TravelDate.ToString("dd MMM yyyy")</td>
                                            <td>
                                                @booking.CabRoutePrice?.Cab?.Name<br>
                                                <small class="text-muted">@booking.NumberOfPassengers passengers</small>
                                            </td>
                                            <td>₹@booking.TotalPrice</td>
                                            <td>
                                                @{
                                                    var statusColor = booking.Status.ToString() switch
                                                    {
                                                        "Pending" => "warning",
                                                        "Confirmed" => "info",
                                                        "InProgress" => "primary",
                                                        "Completed" => "success",
                                                        "Cancelled" => "danger",
                                                        _ => "secondary"
                                                    };
                                                    var paymentColor = booking.PaymentStatus.ToString() switch
                                                    {
                                                        "Pending" => "warning",
                                                        "Completed" => "success",
                                                        "Failed" => "danger",
                                                        "Refunded" => "info",
                                                        _ => "secondary"
                                                    };
                                                }
                                                <span class="badge bg-@statusColor">@booking.Status.ToString()</span>
                                            </td>
                                            <td>
                                                <span class="badge bg-@paymentColor">@booking.PaymentStatus.ToString()</span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="@Url.Action("BookingDetails", new { id = booking.CabBookingId })"
                                                       class="btn btn-outline-primary" title="View Details">
                                                        <i class="ri-eye-line"></i>
                                                    </a>
                                                    @if (booking.Status != ToursAndTravelsManagement.Enums.CabBookingStatus.Cancelled &&
                                                   booking.Status != ToursAndTravelsManagement.Enums.CabBookingStatus.Completed)
                                                    {
                                                        <button type="button" class="btn btn-outline-danger cancel-booking"
                                                                data-id="@booking.CabBookingId" data-number="@booking.BookingNumber">
                                                            <i class="ri-close-line"></i>
                                                        </button>
                                                    }
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Pagination -->
                        <div class="d-flex justify-content-between align-items-center mt-4">
                            <div class="text-muted">
                                Showing @Model.Count() bookings
                            </div>
                            <nav aria-label="Page navigation">
                                <ul class="pagination mb-0">
                                    <li class="page-item disabled">
                                        <a class="page-link" href="#" tabindex="-1">Previous</a>
                                    </li>
                                    <li class="page-item active"><a class="page-link" href="#">1</a></li>
                                    <li class="page-item"><a class="page-link" href="#">2</a></li>
                                    <li class="page-item"><a class="page-link" href="#">3</a></li>
                                    <li class="page-item">
                                        <a class="page-link" href="#">Next</a>
                                    </li>
                                </ul>
                            </nav>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Cancel booking confirmation
        document.querySelectorAll('.cancel-booking').forEach(btn => {
            btn.addEventListener('click', function () {
                const bookingId = this.dataset.id;
                const bookingNumber = this.dataset.number;

                if (confirm(`Are you sure you want to cancel booking ${bookingNumber}?`)) {
                    fetch(`@Url.Action("CancelBooking", "AdminCab")/${bookingId}`, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    }).then(response => {
                        if (response.ok) {
                            location.reload();
                        }
                    });
                }
            });
        });
    </script>
}