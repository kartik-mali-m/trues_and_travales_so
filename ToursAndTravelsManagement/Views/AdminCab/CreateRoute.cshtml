@{
}
@model ToursAndTravelsManagement.Models.Route
@{
    ViewData["Title"] = "Add New Route";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="ri-add-line me-2"></i> Add New Route
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateRoute" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FromCityId" class="form-label">From City *</label>
                                <select asp-for="FromCityId" class="form-select" required>
                                    <option value="">Select City</option>
                                    @foreach (var city in ViewBag.Cities)
                                    {
                                        <option value="@city.CityId">@city.Name, @city.State</option>
                                    }
                                </select>
                                <span asp-validation-for="FromCityId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="ToCityId" class="form-label">To City *</label>
                                <select asp-for="ToCityId" class="form-select" required>
                                    <option value="">Select City</option>
                                    @foreach (var city in ViewBag.Cities)
                                    {
                                        <option value="@city.CityId">@city.Name, @city.State</option>
                                    }
                                </select>
                                <span asp-validation-for="ToCityId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Distance" class="form-label">Distance (KM) *</label>
                                <input asp-for="Distance" type="number" step="0.01" min="0"
                                       class="form-control" required>
                                <span asp-validation-for="Distance" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="EstimatedTime" class="form-label">Estimated Time (Hours) *</label>
                                <input asp-for="EstimatedTime" type="number" step="0.1" min="0"
                                       class="form-control" required>
                                <span asp-validation-for="EstimatedTime" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="RouteDescription" class="form-label">Route Description</label>
                                <textarea asp-for="RouteDescription" class="form-control" rows="3"
                                          placeholder="Description of the route, major highways, etc."></textarea>
                                <span asp-validation-for="RouteDescription" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="PopularStops" class="form-label">Popular Stops (JSON array)</label>
                                <textarea asp-for="PopularStops" class="form-control" rows="3"
                                          placeholder='["Stop 1", "Stop 2", "Stop 3"]'></textarea>
                                <small class="text-muted">Enter popular stops along the route as JSON array</small>
                                <span asp-validation-for="PopularStops" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("ManageRoutes", "AdminCab")" class="btn btn-secondary">
                                <i class="ri-arrow-left-line me-2"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="ri-save-line me-2"></i> Save Route
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>