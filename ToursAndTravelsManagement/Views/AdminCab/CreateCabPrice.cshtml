@{
}
@model ToursAndTravelsManagement.Models.CabRoutePrice
@{
    ViewData["Title"] = "Add Cab Price";
}

<div class="container-fluid py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">
                        <i class="ri-add-line me-2"></i> Add Cab Price
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="CreateCabPrice" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="CabId" class="form-label">Cab *</label>
                                <select asp-for="CabId" class="form-select" required>
                                    <option value="">Select Cab</option>
                                    @foreach (var cab in ViewBag.Cabs)
                                    {
                                        <option value="@cab.CabId">@cab.Name (@cab.RegistrationNumber)</option>
                                    }
                                </select>
                                <span asp-validation-for="CabId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="RouteId" class="form-label">Route *</label>
                                <select asp-for="RouteId" class="form-select" required>
                                    <option value="">Select Route</option>
                                    @foreach (var route in ViewBag.Routes)
                                    {
                                        <option value="@route.RouteId">
                                            @route.FromCity.Name → @route.ToCity.Name (@route.Distance km)
                                        </option>
                                    }
                                </select>
                                <span asp-validation-for="RouteId" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="JourneyType" class="form-label">Journey Type *</label>
                                <select asp-for="JourneyType" class="form-select" required>
                                    <option value="">Select Journey Type</option>
                                    @foreach (var journeyType in ViewBag.JourneyTypes)
                                    {
                                        <option value="@journeyType.Id">@journeyType.Name</option>
                                    }
                                </select>
                                <span asp-validation-for="JourneyType" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <label asp-for="Price" class="form-label">Price (₹) *</label>
                                <input asp-for="Price" type="number" step="0.01" min="0"
                                       class="form-control" required>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="IncludedServices" class="form-label">Included Services (JSON array)</label>
                                <textarea asp-for="IncludedServices" class="form-control" rows="3"
                                          placeholder='["Fuel", "Driver allowance", "Toll charges"]'></textarea>
                                <small class="text-muted">Enter services included in price as JSON array</small>
                                <span asp-validation-for="IncludedServices" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="ExcludedServices" class="form-label">Excluded Services (JSON array)</label>
                                <textarea asp-for="ExcludedServices" class="form-control" rows="3"
                                          placeholder='["Parking", "Food", "Accommodation"]'></textarea>
                                <small class="text-muted">Enter services NOT included in price as JSON array</small>
                                <span asp-validation-for="ExcludedServices" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="ExtraCharges" class="form-label">Extra Charges Description</label>
                                <textarea asp-for="ExtraCharges" class="form-control" rows="2"
                                          placeholder="Multiple pickup & drop, Night charges extra, etc."></textarea>
                                <span asp-validation-for="ExtraCharges" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="Notes" class="form-label">Notes</label>
                                <textarea asp-for="Notes" class="form-control" rows="2"
                                          placeholder="After online booking: please call and inform in office or whatsapp."></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>

                            <div class="col-md-12 mb-3">
                                <label asp-for="TermsAndConditions" class="form-label">Terms & Conditions</label>
                                <textarea asp-for="TermsAndConditions" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="TermsAndConditions" class="text-danger"></span>
                            </div>

                            <div class="col-md-6 mb-3">
                                <div class="form-check mt-4">
                                    <input asp-for="IsAvailable" class="form-check-input" type="checkbox" checked>
                                    <label asp-for="IsAvailable" class="form-check-label">Available for Booking</label>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a href="@Url.Action("ManageCabPrices", "AdminCab")" class="btn btn-secondary">
                                <i class="ri-arrow-left-line me-2"></i> Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="ri-save-line me-2"></i> Save Price
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>