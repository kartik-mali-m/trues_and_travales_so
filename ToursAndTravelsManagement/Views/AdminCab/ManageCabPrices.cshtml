@section Scripts {
    <script>
        $(document).ready(function () {
            // Initialize DataTable
            $('#cabPricesTable').DataTable({
                "pageLength": 10,
                "order": [[1, 'asc']],
                "language": {
                    "emptyTable": "No cab prices available",
                    "search": "Search cab prices:",
                    "paginate": {
                        "previous": "<i class='fas fa-chevron-left'></i>",
                        "next": "<i class='fas fa-chevron-right'></i>"
                    }
                },
                "columnDefs": [
                    { "orderable": false, "targets": [0, 7] },
                    { "searchable": false, "targets": [0, 7] }
                ],
                "responsive": true
            });

            // Auto-dismiss alerts
            setTimeout(function () {
                $('.alert').alert('close');
            }, 5000);

            // Confirm before delete
            $(document).on('click', '.btn-outline-danger', function (e) {
                var routeInfo = $(this).closest('tr').find('.route-info').text().trim();
                var cabInfo = $(this).closest('tr').find('.cab-info strong').first().text();

                if (!confirm('Are you sure you want to delete price for:\n' + cabInfo + '\nRoute: ' + routeInfo + '?')) {
                    e.preventDefault();
                    e.stopPropagation();
                    return false;
                }
            });

            // Confirm before toggle availability
            $(document).on('click', '.btn-outline-warning, .btn-outline-success', function (e) {
                var isActivating = $(this).hasClass('btn-outline-success');
                var action = isActivating ? 'activate' : 'deactivate';
                var routeInfo = $(this).closest('tr').find('.route-info').text().trim();
                var cabInfo = $(this).closest('tr').find('.cab-info strong').first().text();

                if (!confirm('Are you sure you want to ' + action + ' price for:\n' + cabInfo + '\nRoute: ' + routeInfo + '?')) {
                    e.preventDefault();
                    e.stopPropagation();
                    return false;
                }
            });

            // Highlight row on hover
            $('#cabPricesTable tbody tr').hover(
                function () {
                    $(this).addClass('hover-row');
                },
                function () {
                    $(this).removeClass('hover-row');
                }
            );
        });
    </script>
