<div class="container-fluid">
    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h3 mb-0 text-gray-800">
                <i class="fas fa-money-bill-wave mr-2"></i>Manage Cab Prices
            </h1>
            <p class="text-muted mb-0">Configure cab pricing for different routes and journey types</p>
        </div>
        <a asp-action="CreateCabPrice" class="btn btn-primary">
            <i class="fas fa-plus-circle mr-1"></i> Add New Price
        </a>
    </div>

    <!-- Alerts -->
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle mr-2"></i> @TempData["Success"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="fas fa-exclamation-circle mr-2"></i> @TempData["Error"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    }

    <!-- Filter Cards -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Total Prices
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@Model.Count()</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-list fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Available Prices
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(c => c.IsAvailable)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-check-circle fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-warning shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                                One-Way Journeys
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(c => c.JourneyType == JourneyType.OneWay)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-arrow-right fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-info shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                                Outstation
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(c => c.JourneyType == JourneyType.Outstation)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-road fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Additional Statistics Row -->
    <div class="row mb-4">
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-secondary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-secondary text-uppercase mb-1">
                                Local
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(c => c.JourneyType == JourneyType.Local)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-map-marker-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card border-left-danger shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-danger text-uppercase mb-1">
                                Transfer
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">
                                @Model.Count(c => c.JourneyType == JourneyType.Transfer)
                            </div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-exchange-alt fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cab Prices Table -->
    <div class="card shadow mb-4">
        <div class="card-header py-3 d-flex justify-content-between align-items-center">
            <h6 class="m-0 font-weight-bold text-primary">
                <i class="fas fa-list mr-1"></i> All Cab Prices
            </h6>
            <div class="dropdown">
                <button class="btn btn-outline-secondary btn-sm dropdown-toggle" type="button"
                        id="filterDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    <i class="fas fa-filter mr-1"></i> Filter
                </button>
                <div class="dropdown-menu" aria-labelledby="filterDropdown">
                    <a class="dropdown-item" asp-action="ManageCabPrices">All Prices</a>
                    <div class="dropdown-divider"></div>
                    <h6 class="dropdown-header">Availability</h6>
                    <a class="dropdown-item" href="?isAvailable=true">Available Only</a>
                    <a class="dropdown-item" href="?isAvailable=false">Unavailable Only</a>
                    <div class="dropdown-divider"></div>
                    <h6 class="dropdown-header">Journey Type</h6>
                    <a class="dropdown-item" href="?journeyType=1">One-Way Only</a>
                    <a class="dropdown-item" href="?journeyType=2">Outstation Only</a>
                    <a class="dropdown-item" href="?journeyType=3">Local Only</a>
                    <a class="dropdown-item" href="?journeyType=4">Transfer Only</a>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Any())
                {
                    <table class="table table-bordered table-hover" id="cabPricesTable" width="100%" cellspacing="0">
                        <thead class="thead-light">
                            <tr>
                                <th>#</th>
                                <th>
                                    <i class="fas fa-car mr-1"></i> Cab Details
                                </th>
                                <th>
                                    <i class="fas fa-route mr-1"></i> Route
                                </th>
                                <th>
                                    <i class="fas fa-directions mr-1"></i> Journey Type
                                </th>
                                <th>
                                    <i class="fas fa-rupee-sign mr-1"></i> Price
                                </th>
                                <th>
                                    <i class="fas fa-toggle-on mr-1"></i> Status
                                </th>
                                <th>
                                    <i class="fas fa-calendar-alt mr-1"></i> Created
                                </th>
                                <th>
                                    <i class="fas fa-cogs mr-1"></i> Actions
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int counter = 1;
                            }
                            @foreach (var cabPrice in Model)
                            {
                                <tr>
                                    <td>@counter</td>
                                    <td>
                                        <div class="cab-info">
                                            <strong>@cabPrice.Cab?.Name</strong>
                                            <div class="text-muted small">
                                                <span class="badge badge-secondary">@cabPrice.Cab?.Type</span>
                                                <span class="badge badge-info">@cabPrice.Cab?.SeatingCapacity seats</span>
                                            </div>
                                            <div class="text-muted smaller">
                                                Reg: @cabPrice.Cab?.RegistrationNumber
                                            </div>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="route-info">
                                            <div class="d-flex align-items-center mb-1">
                                                <i class="fas fa-map-marker-alt text-danger mr-2"></i>
                                                <strong>@cabPrice.Route?.FromCity?.Name</strong>
                                            </div>
                                            <div class="d-flex align-items-center">
                                                <i class="fas fa-map-marker text-success mr-2"></i>
                                                <strong>@cabPrice.Route?.ToCity?.Name</strong>
                                            </div>
                                            @if (cabPrice.Route?.Distance > 0)
                                            {
                                                <div class="text-muted small mt-1">
                                                    <i class="fas fa-road mr-1"></i>
                                                    @cabPrice.Route.Distance.ToString("N1") km
                                                </div>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @switch (cabPrice.JourneyType)
                                        {
                                            case JourneyType.OneWay:
                                                <span class="badge badge-warning">
                                                    <i class="fas fa-arrow-right mr-1"></i> One-Way
                                                </span>
                                                break;
                                            case JourneyType.Outstation:
                                                <span class="badge badge-primary">
                                                    <i class="fas fa-road mr-1"></i> Outstation
                                                </span>
                                                break;
                                            case JourneyType.Local:
                                                <span class="badge badge-info">
                                                    <i class="fas fa-map-marker-alt mr-1"></i> Local
                                                </span>
                                                break;
                                            case JourneyType.Transfer:
                                                <span class="badge badge-secondary">
                                                    <i class="fas fa-exchange-alt mr-1"></i> Transfer
                                                </span>
                                                break;
                                            default:
                                                <span class="badge badge-light">@cabPrice.JourneyType</span>
                                                break;
                                        }
                                    </td>
                                    <td>
                                        <div class="price-display">
                                            <div class="h5 mb-0 font-weight-bold text-primary">
                                                ₹@cabPrice.Price.ToString("N0")
                                            </div>
                                            @if (!string.IsNullOrEmpty(cabPrice.ExtraCharges))
                                            {
                                                <div class="text-muted small">
                                                    + ₹@cabPrice.ExtraCharges extra
                                                </div>
                                            }
                                        </div>
                                    </td>
                                    <td>
                                        @if (cabPrice.IsAvailable)
                                        {
                                            <span class="badge badge-success">
                                                <i class="fas fa-check-circle mr-1"></i> Available
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-danger">
                                                <i class="fas fa-times-circle mr-1"></i> Unavailable
                                            </span>
                                        }
                                    </td>
                                    <td>
                                        @if (cabPrice.CreatedDate.Year > 1)
                                        {
                                            <div class="text-muted small">
                                                @cabPrice.CreatedDate.ToString("dd MMM yyyy")
                                            </div>
                                            @if (!string.IsNullOrEmpty(cabPrice.CreatedBy))
                                            {
                                                <div class="text-muted smaller">
                                                    by @cabPrice.CreatedBy
                                                </div>
                                            }
                                        }
                                    </td>
                                    <td>
                                        <div class="btn-group" role="group">
                                            <a asp-action="EditCabPrice" asp-route-id="@cabPrice.CabRoutePriceId"
                                               class="btn btn-sm btn-outline-primary" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>

                                            <a asp-action="CabPriceDetails" asp-route-id="@cabPrice.CabRoutePriceId"
                                               class="btn btn-sm btn-outline-info" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                          @*   <button type="button" class="btn btn-sm btn-outline-info"
                                                    data-toggle="modal" data-target="#detailsModal-@cabPrice.CabRoutePriceId"
                                                    title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </button> *@
                                            @if (cabPrice.IsAvailable)
                                            {
                                                <form asp-action="ToggleAvailability" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@cabPrice.CabRoutePriceId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-warning" title="Deactivate">
                                                        <i class="fas fa-toggle-on"></i>
                                                    </button>
                                                </form>
                                            }
                                            else
                                            {
                                                <form asp-action="ToggleAvailability" method="post" class="d-inline">
                                                    <input type="hidden" name="id" value="@cabPrice.CabRoutePriceId" />
                                                    <button type="submit" class="btn btn-sm btn-outline-success" title="Activate">
                                                        <i class="fas fa-toggle-off"></i>
                                                    </button>
                                                </form>
                                            }
                                            <button type="button" class="btn btn-sm btn-outline-danger"
                                                    data-toggle="modal" data-target="#deleteModal-@cabPrice.CabRoutePriceId"
                                                    title="Delete">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Details Modal -->
                                <div class="modal fade" id="detailsModal-@cabPrice.CabRoutePriceId" tabindex="-1" role="dialog"
                                     aria-labelledby="detailsModalLabel-@cabPrice.CabRoutePriceId" aria-hidden="true">
                                    <div class="modal-dialog modal-lg" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header bg-primary text-white">
                                                <h5 class="modal-title" id="detailsModalLabel-@cabPrice.CabRoutePriceId">
                                                    <i class="fas fa-info-circle mr-2"></i>Price Details
                                                </h5>
                                                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <div class="row">
                                                    <div class="col-md-6">
                                                        <h6><i class="fas fa-car mr-2"></i>Cab Information</h6>
                                                        <table class="table table-sm">
                                                            <tr>
                                                                <th>Cab:</th>
                                                                <td>@cabPrice.Cab?.Name</td>
                                                            </tr>
                                                            <tr>
                                                                <th>Type:</th>
                                                                <td>@cabPrice.Cab?.Type</td>
                                                            </tr>
                                                            <tr>
                                                                <th>Model:</th>
                                                                <td>@cabPrice.Cab?.Model</td>
                                                            </tr>
                                                            <tr>
                                                                <th>Registration:</th>
                                                                <td>@cabPrice.Cab?.RegistrationNumber</td>
                                                            </tr>
                                                            <tr>
                                                                <th>Capacity:</th>
                                                                <td>@cabPrice.Cab?.SeatingCapacity seats</td>
                                                            </tr>
                                                            <tr>
                                                                <th>Driver:</th>
                                                                <td>@cabPrice.Cab?.DriverName (@cabPrice.Cab?.DriverPhone)</td>
                                                            </tr>
                                                        </table>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <h6><i class="fas fa-route mr-2"></i>Route Information</h6>
                                                        <table class="table table-sm">
                                                            <tr>
                                                                <th>From:</th>
                                                                <td>@cabPrice.Route?.FromCity?.Name</td>
                                                            </tr>
                                                            <tr>
                                                                <th>To:</th>
                                                                <td>@cabPrice.Route?.ToCity?.Name</td>
                                                            </tr>
                                                            <tr>
                                                                <th>Distance:</th>
                                                                <td>@cabPrice.Route?.Distance.ToString("N1") km</td>
                                                            </tr>
                                                            <tr>
                                                                <th>Est. Time:</th>
                                                               @*  <td>@estimatedTimeText</td> *@
                                                            </tr>
                                                            <tr>
                                                                <th>Journey Type:</th>
                                                                <td>
                                                                    @switch (cabPrice.JourneyType)
                                                                    {
                                                                        case JourneyType.OneWay:
                                                                            <span class="badge badge-warning">One-Way</span>
                                                                            break;
                                                                        case JourneyType.Outstation:
                                                                            <span class="badge badge-primary">Outstation</span>
                                                                            break;
                                                                        case JourneyType.Local:
                                                                            <span class="badge badge-info">Local</span>
                                                                            break;
                                                                        case JourneyType.Transfer:
                                                                            <span class="badge badge-secondary">Transfer</span>
                                                                            break;
                                                                        default:
                                                                            <span class="badge badge-light">@cabPrice.JourneyType</span>
                                                                            break;
                                                                    }
                                                                </td>
                                                            </tr>
                                                        </table>
                                                    </div>
                                                </div>
                                                <div class="row mt-3">
                                                    <div class="col-md-6">
                                                        <h6><i class="fas fa-money-bill-wave mr-2"></i>Pricing Details</h6>
                                                        <table class="table table-sm">
                                                            <tr>
                                                                <th>Base Price:</th>
                                                                <td class="font-weight-bold text-success">₹@cabPrice.Price.ToString("N0")</td>
                                                            </tr>
                                                            @if (!string.IsNullOrEmpty(cabPrice.ExtraCharges))
                                                            {
                                                                <tr>
                                                                    <th>Extra Charges:</th>
                                                                    <td class="text-warning">@cabPrice.ExtraCharges</td>
                                                                </tr>
                                                            }
                                                            @if (!string.IsNullOrEmpty(cabPrice.IncludedServices))
                                                            {
                                                                <tr>
                                                                    <th>Included Services:</th>
                                                                    <td>@cabPrice.IncludedServices</td>
                                                                </tr>
                                                            }
                                                            @if (!string.IsNullOrEmpty(cabPrice.ExcludedServices))
                                                            {
                                                                <tr>
                                                                    <th>Excluded Services:</th>
                                                                    <td>@cabPrice.ExcludedServices</td>
                                                                </tr>
                                                            }
                                                        </table>
                                                    </div>
                                                    <div class="col-md-6">
                                                        <h6><i class="fas fa-sticky-note mr-2"></i>Additional Information</h6>
                                                        @if (!string.IsNullOrEmpty(cabPrice.Notes))
                                                        {
                                                            <div class="mb-3">
                                                                <strong>Notes:</strong>
                                                                <p class="mt-1">@cabPrice.Notes</p>
                                                            </div>
                                                        }
                                                        @if (!string.IsNullOrEmpty(cabPrice.TermsAndConditions))
                                                        {
                                                            <div class="mb-3">
                                                                <strong>Terms & Conditions:</strong>
                                                                <p class="mt-1">@cabPrice.TermsAndConditions</p>
                                                            </div>
                                                        }
                                                        <div class="text-muted small">
                                                            <strong>Status:</strong>
                                                            @if (cabPrice.IsAvailable)
                                                            {
                                                                <span class="badge badge-success">Available</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge badge-danger">Unavailable</span>
                                                            }
                                                        </div>
                                                        @if (cabPrice.CreatedDate.Year > 1)
                                                        {
                                                            <div class="text-muted small mt-2">
                                                                <i class="fas fa-calendar-alt mr-1"></i>
                                                                Created: @cabPrice.CreatedDate.ToString("dd MMM yyyy HH:mm")
                                                                @if (!string.IsNullOrEmpty(cabPrice.CreatedBy))
                                                                {
                                                                    <div>By: @cabPrice.CreatedBy</div>
                                                                }
                                                            </div>
                                                        }
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="modal-footer">
                                                <a asp-action="EditCabPrice" asp-route-id="@cabPrice.CabRoutePriceId" class="btn btn-primary">
                                                    <i class="fas fa-edit mr-1"></i> Edit Price
                                                </a>
                                                <button type="button" class="btn btn-secondary" data-dismiss="modal">
                                                    <i class="fas fa-times mr-1"></i> Close
                                                </button>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Delete Modal -->
                                <div class="modal fade" id="deleteModal-@cabPrice.CabRoutePriceId" tabindex="-1" role="dialog"
                                     aria-labelledby="deleteModalLabel-@cabPrice.CabRoutePriceId" aria-hidden="true">
                                    <div class="modal-dialog" role="document">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title" id="deleteModalLabel-@cabPrice.CabRoutePriceId">
                                                    <i class="fas fa-exclamation-triangle mr-2"></i>Confirm Delete
                                                </h5>
                                                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                                                    <span aria-hidden="true">&times;</span>
                                                </button>
                                            </div>
                                            <div class="modal-body">
                                                <p>Are you sure you want to delete this cab price configuration?</p>
                                                <div class="alert alert-warning">
                                                    <i class="fas fa-exclamation-circle mr-2"></i>
                                                    <strong>Warning:</strong> This action will affect all bookings associated with this price!
                                                </div>
                                                <table class="table table-sm">
                                                    <tr>
                                                        <th>Route:</th>
                                                        <td>@cabPrice.Route?.FromCity?.Name → @cabPrice.Route?.ToCity?.Name</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Cab:</th>
                                                        <td>@cabPrice.Cab?.Name (@cabPrice.Cab?.RegistrationNumber)</td>
                                                    </tr>
                                                    <tr>
                                                        <th>Journey Type:</th>
                                                        <td>
                                                            @switch (cabPrice.JourneyType)
                                                            {
                                                                case JourneyType.OneWay:
                                                                    <span>One-Way</span>
                                                                    break;
                                                                case JourneyType.Outstation:
                                                                    <span>Outstation</span>
                                                                    break;
                                                                case JourneyType.Local:
                                                                    <span>Local</span>
                                                                    break;
                                                                case JourneyType.Transfer:
                                                                    <span>Transfer</span>
                                                                    break;
                                                                default:
                                                                    <span>@cabPrice.JourneyType</span>
                                                                    break;
                                                            }
                                                        </td>
                                                    </tr>
                                                    <tr>
                                                        <th>Price:</th>
                                                        <td class="font-weight-bold">₹@cabPrice.Price.ToString("N0")</td>
                                                    </tr>
                                                </table>
                                            </div>
                                            <div class="modal-footer">
