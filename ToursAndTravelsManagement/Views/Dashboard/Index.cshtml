                <div class="table-title-3d">
                    <span>Top Performing Tours</span>
                </div>
                <div class="list-group" style="background: transparent; border: none;">
                   @*  @foreach (var tour in Model.TopTours.Take(5))
                    {
                        <div class="list-group-item border-0 py-3" style="background: transparent; border-color: rgba(255,255,255,0.1) !important;">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <h6 class="mb-0" style="color: white;">@tour.Name</h6>
                                <span class="badge" style="background: linear-gradient(135deg, #667eea, #764ba2);">@tour.Bookings bookings</span>
                            </div>
                            <div class="d-flex justify-content-between align-items-center">
                                <small style="color: rgba(255,255,255,0.7);">Revenue: ₹@tour.Revenue.ToString("N0")</small>
                                <div class="progress" style="width: 100px; height: 6px; background: rgba(255,255,255,0.1);">
                                    <div class="progress-bar" style="width: @(tour.Bookings * 100 / Model.TopTours.Max(t => t.Bookings))%; background: linear-gradient(135deg, #667eea, #764ba2);"></div>
                                </div>
                            </div>
                        </div>
                    } *@
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity -->
    <div class="table-container-3d" data-aos="fade-up" data-aos-delay="400">
        <div class="table-title-3d">
            <span>Recent Activity</span>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="text-center p-4" style="border-right: 1px solid rgba(255,255,255,0.1);">
                    <div class="mb-3">
                        <div class="mx-auto" style="width: 60px; height: 60px; background: linear-gradient(135deg, #667eea, #764ba2); border-radius: 15px; display: flex; align-items: center; justify-content: center;">
