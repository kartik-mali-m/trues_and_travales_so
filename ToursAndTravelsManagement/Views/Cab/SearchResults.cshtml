@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model List<ToursAndTravelsManagement.Models.CabRoutePrice>
@{
    ViewData["Title"] = "Available Cabs";
    var searchCriteria = ViewBag.SearchCriteria as ToursAndTravelsManagement.ViewModels.CabSearchViewModel;
    Layout = "~/Views/Shared/_AnotherLayout.cshtml";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="@Url.Action("Search", "Cab")">Home</a></li>
                    <li class="breadcrumb-item active">Available Cabs</li>
                </ol>
            </nav>

            <div class="card shadow-sm mb-4">
                <div class="card-body">
                    <div class="row align-items-center">
                        <div class="col-md-8">
                            <h4 class="mb-0">
                                <i class="ri-map-pin-line text-primary me-2"></i>
                                @searchCriteria?.FromCity → @searchCriteria?.ToCity
                            </h4>
                            <p class="text-muted mb-0">
                                <i class="ri-calendar-line me-1"></i>
                                @searchCriteria?.TravelDate.ToString("dd MMM yyyy")
                                •
                                <i class="ri-road-map-line me-1"></i>
                                @Enum.GetName(typeof(ToursAndTravelsManagement.Enums.JourneyType), searchCriteria?.JourneyType)
                            </p>
                        </div>
                        <div class="col-md-4 text-end">
                            <a href="@Url.Action("Search", "Cab")" class="btn btn-outline-primary">
                                <i class="ri-search-line me-2"></i>New Search
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="alert alert-info">
                    <div class="text-center py-4">
                        <i class="ri-car-line display-4 text-muted mb-3"></i>
                        <h4>No Cabs Available</h4>
                        <p class="text-muted">Sorry, no cabs are available for the selected route and date.</p>
                        <a href="@Url.Action("Search", "Cab")" class="btn btn-primary mt-2">
                            Try Different Search
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Available Cabs List -->
            <div class="col-lg-8">
                @foreach (var cabPrice in Model)
                {
                    <div class="card mb-4 shadow-sm border-0">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-3 text-center">
                                    <div class="mb-3">
                                        <i class="ri-taxi-fill display-4 text-primary"></i>
                                    </div>
                                    <span class="badge bg-primary">@cabPrice.Cab.SeatingCapacity Seater</span>
                                    @if (cabPrice.Cab.HasAC)
                                    {
                                        <span class="badge bg-success ms-1">A/C</span>
                                    }
                                </div>

                                <div class="col-md-6">
                                    <h5 class="card-title">@cabPrice.Cab.Name</h5>
                                    <p class="text-muted mb-2">
                                        <i class="ri-user-line me-1"></i> @cabPrice.Cab.SeatingCapacity Passengers
                                        @if (cabPrice.Cab.HasAC)
                                        {
                                            <span class="ms-2"><i class="ri-snowflake-line me-1"></i> Air Conditioned</span>
                                        }
                                    </p>

                                    <!-- Route Info -->
                                    <p class="mb-2">
                                        <i class="ri-map-pin-line me-1 text-primary"></i>
                                        @cabPrice.Route.FromCity.Name → @cabPrice.Route.ToCity.Name
                                    </p>

                                    <!-- Included Services -->
                                    @if (!string.IsNullOrEmpty(cabPrice.IncludedServices))
                                    {
                                        <div class="mb-2">
                                            <small class="text-muted"><strong>Including:</strong></small>
                                            @try
                                            {
                                                var included = System.Text.Json.JsonSerializer.Deserialize<List<string>>(cabPrice.IncludedServices);
                                                if (included != null && included.Any())
                                                {
                                                    <div>
                                                        @foreach (var item in included.Take(2))
                                                        {
                                                            <span class="badge bg-success bg-opacity-10 text-success border border-success border-opacity-25 me-1 mb-1">
                                                                <i class="ri-check-line me-1"></i>@item
                                                            </span>
                                                        }
                                                        @if (included.Count > 2)
                                                        {
                                                            <span class="badge bg-light text-muted border">
                                                                +@(included.Count - 2) more
                                                            </span>
                                                        }
                                                    </div>
                                                }
                                            }
                                            catch { }
                                        </div>
                                    }

                                    @if (!string.IsNullOrEmpty(cabPrice.Notes))
                                    {
                                        <small class="text-muted d-block mt-2">
                                            <i class="ri-information-line me-1"></i>@cabPrice.Notes
                                        </small>
                                    }
                                </div>

                                <div class="col-md-3 text-center">
                                    <h4 class="text-success mb-3">₹@cabPrice.Price</h4>

                                    <!-- View Details Button -->
                                    <a asp-action="CabDetails" asp-controller="Cab"
                                       asp-route-id="@cabPrice.CabRoutePriceId"
                                       class="btn btn-primary w-100 mb-2">
                                        <i class="ri-eye-line me-2"></i> View Details
                                    </a>

                                    <!-- Quick Book Button -->
                                    <a asp-action="Book" asp-controller="Cab"
                                       asp-route-id="@cabPrice.CabRoutePriceId"
                                       class="btn btn-outline-primary btn-sm w-100">
                                        <i class="ri-calendar-check-line me-1"></i> Quick Book
                                    </a>

                                    <small class="text-muted d-block mt-2">
                                        <i class="ri-shield-check-line me-1"></i> Free Cancellation
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>

            <!-- Booking Summary Sidebar -->
            <div class="col-lg-4">
                <div class="card shadow-sm border-0 sticky-top" style="top: 20px;">
                    <div class="card-header bg-primary text-white">
                        <h5 class="mb-0"><i class="ri-information-line me-2"></i>Booking Summary</h5>
                    </div>
                    <div class="card-body">
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item d-flex justify-content-between">
                                <span>From</span>
                                <strong>@searchCriteria?.FromCity</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>To</span>
                                <strong>@searchCriteria?.ToCity</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Date</span>
                                <strong>@searchCriteria?.TravelDate.ToString("dd MMM yyyy")</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Journey Type</span>
                                <strong>@Enum.GetName(typeof(ToursAndTravelsManagement.Enums.JourneyType), searchCriteria?.JourneyType)</strong>
                            </li>
                            <li class="list-group-item d-flex justify-content-between">
                                <span>Available Cabs</span>
                                <strong>@Model.Count</strong>
                            </li>
                        </ul>

                        <div class="alert alert-info mt-3">
                            <h6><i class="ri-lightbulb-flash-line me-2"></i>Why Book With Us?</h6>
                            <ul class="mb-0 ps-3">
                                <li>Verified & Experienced Drivers</li>
                                <li>24/7 Customer Support</li>
                                <li>Instant Booking Confirmation</li>
                                <li>Safe & Secure Payments</li>
                            </ul>
                        </div>

                        <a href="@Url.Action("Search", "Cab")" class="btn btn-outline-primary w-100">
                            <i class="ri-search-line me-2"></i>Modify Search
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>