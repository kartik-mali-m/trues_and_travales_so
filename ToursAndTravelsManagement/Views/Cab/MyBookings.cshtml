@model List<ToursAndTravelsManagement.Models.CabBooking>
@{
    ViewData["Title"] = "My Cab Bookings";
    Layout = "~/Views/Shared/_AnotherLayout.cshtml";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-0">My Cab Bookings</h1>
            <p class="text-muted">View and manage all your cab bookings</p>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center py-5">
                        <i class="ri-car-line display-4 text-muted mb-3"></i>
                        <h4 class="text-muted mb-3">No Bookings Found</h4>
                        <p class="text-muted mb-4">You haven't made any cab bookings yet.</p>
                        <a href="@Url.Action("Search", "Cab")" class="btn btn-primary">
                            <i class="ri-taxi-line me-2"></i>Book a Cab Now
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
    else
    {
        <!-- Filter Options -->
        <div class="card shadow-sm border-0 mb-4">
            <div class="card-body">
                <div class="row align-items-center">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="ri-search-line"></i></span>
                            <input type="text" id="searchBookings" class="form-control" placeholder="Search bookings...">
                        </div>
                    </div>
                    <div class="col-md-6 text-end">
                        <div class="btn-group">
                            <button type="button" class="btn btn-outline-primary filter-btn active" data-filter="all">All</button>
                            <button type="button" class="btn btn-outline-primary filter-btn" data-filter="pending">Pending</button>
                            <button type="button" class="btn btn-outline-primary filter-btn" data-filter="confirmed">Confirmed</button>
                            <button type="button" class="btn btn-outline-primary filter-btn" data-filter="completed">Completed</button>
                            <button type="button" class="btn btn-outline-primary filter-btn" data-filter="cancelled">Cancelled</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bookings List -->
        <div class="row" id="bookingsList">
            @foreach (var booking in Model)
            {
                var statusClass = booking.Status.ToString().ToLower();
                var statusColor = booking.Status switch
                {
                    ToursAndTravelsManagement.Enums.CabBookingStatus.Pending => "warning",
                    ToursAndTravelsManagement.Enums.CabBookingStatus.Confirmed => "info",
                    ToursAndTravelsManagement.Enums.CabBookingStatus.InProgress => "primary",
                    ToursAndTravelsManagement.Enums.CabBookingStatus.Completed => "success",
                    ToursAndTravelsManagement.Enums.CabBookingStatus.Cancelled => "danger",
                    _ => "secondary"
                };

                <div class="col-12 mb-4 booking-card" data-status="@statusClass">
                    <div class="card shadow-sm border-0">
                        <div class="card-body">
                            <div class="row align-items-center">
                                <div class="col-md-3">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="p-3 rounded-circle bg-@statusColor bg-opacity-10">
                                                <i class="ri-taxi-fill text-@statusColor fs-4"></i>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1">@booking.CabRoutePrice.Cab.Name</h6>
                                            <span class="badge bg-@statusColor">@booking.Status.ToString()</span>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="mb-2">
                                        <i class="ri-map-pin-line text-muted me-2"></i>
                                        <span>@booking.CabRoutePrice.Route.FromCity.Name → @booking.CabRoutePrice.Route.ToCity.Name</span>
                                    </div>
                                    <div>
                                        <i class="ri-calendar-line text-muted me-2"></i>
                                        <span>@booking.TravelDate.ToString("dd MMM yyyy")</span>
                                        <i class="ri-time-line text-muted ms-3 me-2"></i>
                                        <span>@booking.PickupTime.ToString(@"hh\:mm")</span>
                                    </div>
                                </div>

                                <div class="col-md-2">
                                    <div class="text-center">
                                        <h5 class="text-success mb-0">₹@booking.TotalPrice</h5>
                                        <small class="text-muted">Total Amount</small>
                                    </div>
                                </div>

                                <div class="col-md-3 text-end">
                                    <a href="@Url.Action("BookingConfirmation", "Cab", new { id = booking.CabBookingId })"
                                       class="btn btn-outline-primary btn-sm">
                                        <i class="ri-eye-line me-1"></i>View Details
                                    </a>

                                    @if (booking.Status == ToursAndTravelsManagement.Enums.CabBookingStatus.Pending)
                                    {
                                        <button class="btn btn-outline-danger btn-sm ms-2 cancel-booking"
                                                data-booking-id="@booking.CabBookingId">
                                            <i class="ri-close-line me-1"></i>Cancel
                                        </button>
                                    }

                                    @if (booking.Status == ToursAndTravelsManagement.Enums.CabBookingStatus.Completed)
                                    {
                                        <button class="btn btn-outline-success btn-sm ms-2 download-invoice"
                                                data-booking-id="@booking.CabBookingId">
                                            <i class="ri-download-line me-1"></i>Invoice
                                        </button>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Additional Info -->
                        <div class="card-footer bg-light border-0">
                            <div class="row">
                                <div class="col-md-4">
                                    <small class="text-muted">
                                        <i class="ri-user-line me-1"></i>
                                        @booking.NumberOfPassengers Passengers
                                    </small>
                                </div>
                                <div class="col-md-4">
                                    <small class="text-muted">
                                        <i class="ri-bank-card-line me-1"></i>
                                        @booking.PaymentMethod.ToString()
                                    </small>
                                </div>
                                <div class="col-md-4 text-end">
                                    <small class="text-muted">
                                        Booking ID: @booking.BookingNumber
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Pagination (if needed) -->
        <div class="row">
            <div class="col-12">
                <nav aria-label="Page navigation">
                    <ul class="pagination justify-content-center">
                        <li class="page-item disabled">
                            <a class="page-link" href="#" tabindex="-1">Previous</a>
                        </li>
                        <li class="page-item active"><a class="page-link" href="#">1</a></li>
                        <li class="page-item"><a class="page-link" href="#">2</a></li>
                        <li class="page-item"><a class="page-link" href="#">3</a></li>
                        <li class="page-item">
                            <a class="page-link" href="#">Next</a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Filter bookings
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                // Remove active class from all buttons
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active'));
                // Add active class to clicked button
                this.classList.add('active');

                const filter = this.dataset.filter;
                const bookings = document.querySelectorAll('.booking-card');

                bookings.forEach(booking => {
                    if (filter === 'all') {
                        booking.style.display = 'block';
                    } else {
                        if (booking.dataset.status === filter) {
                            booking.style.display = 'block';
                        } else {
                            booking.style.display = 'none';
                        }
                    }
                });
            });
        });

        // Search bookings
        document.getElementById('searchBookings').addEventListener('input', function () {
            const searchTerm = this.value.toLowerCase();
            const bookings = document.querySelectorAll('.booking-card');

            bookings.forEach(booking => {
                const text = booking.textContent.toLowerCase();
                if (text.includes(searchTerm)) {
                    booking.style.display = 'block';
                } else {
                    booking.style.display = 'none';
                }
            });
        });

        // Cancel booking
        document.querySelectorAll('.cancel-booking').forEach(btn => {
            btn.addEventListener('click', function () {
                const bookingId = this.dataset.bookingId;
                if (confirm('Are you sure you want to cancel this booking?')) {
                    fetch(`/Cab/CancelBooking/${bookingId}`, {
                        method: 'POST',
                        headers: {
                            'RequestVerificationToken': document.querySelector('input[name="__RequestVerificationToken"]').value
                        }
                    })
                        .then(response => {
                            if (response.ok) {
                                location.reload();
                            }
                        });
                }
            });
        });

        // Download invoice
        document.querySelectorAll('.download-invoice').forEach(btn => {
            btn.addEventListener('click', function () {
                const bookingId = this.dataset.bookingId;
                window.open(`/Cab/DownloadInvoice/${bookingId}`, '_blank');
            });
        });
    </script>

    <style>
        .booking-card {
            transition: transform 0.2s;
        }

            .booking-card:hover {
                transform: translateY(-2px);
            }
    </style>
}