        document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('whatsappContactForm');
    const sendBtn = document.getElementById('sendWhatsAppBtn');
    const whatsappLink = document.getElementById('whatsappLink');
    
    // WhatsApp phone number - REPLACE WITH YOUR NUMBER
    const whatsappNumber = '917028493468'; // Your WhatsApp number with country code
    
    // Function to automatically send to WhatsApp
    function sendToWhatsAppAuto() {
        // Get form values
        const firstName = document.getElementById('firstName').value.trim();
        const lastName = document.getElementById('lastName').value.trim();
        const email = document.getElementById('email').value.trim();
        const subject = document.getElementById('subject').value.trim();
        const message = document.getElementById('message').value.trim();
        const termsChecked = document.getElementById('termsCheck').checked;
        
        // Validate required fields
        if (!firstName || !email || !subject || !message) {
            alert('Please fill in all required fields (First Name, Email, Subject, and Message)');
            return false;
        }
        
        // Validate terms
        if (!termsChecked) {
            alert('Please agree to the terms & conditions by checking the box');
            return false;
        }
        
  
        
        // Format the WhatsApp message
        let whatsappMessage = `*New Contact Form Submission*\n\n`;
        whatsappMessage += `*First Name:* ${firstName}\n`;
        if (lastName) whatsappMessage += `*Last Name:* ${lastName}\n`;
        whatsappMessage += `*Email:* ${email}\n`;
        whatsappMessage += `*Subject:* ${subject}\n`;
        whatsappMessage += `*Message:*\n${message}\n\n`;
        whatsappMessage += `_Submitted via Website Contact Form_`;
        
        // Encode message for URL (special encoding for WhatsApp)
        const encodedMessage = encodeURIComponent(whatsappMessage);
        
        // Create WhatsApp URL
        const whatsappURL = `https://wa.me/${whatsappNumber}?text=${encodedMessage}`;
        
        // Update the WhatsApp link href
        whatsappLink.href = whatsappURL;
        
        // Show loading state on button
        const originalBtnText = sendBtn.innerHTML;
        sendBtn.innerHTML = '<i class="ri-loader-4-line me-2"></i>Sending...';
        sendBtn.disabled = true;
        
        // Wait a moment then trigger WhatsApp
        setTimeout(() => {
            // Open WhatsApp in new tab
            window.open(whatsappURL, '_blank');
            
            // Reset form
            form.reset();
            
            // Show success message
            alert('✓ Message sent! WhatsApp has been opened. Please click SEND in WhatsApp to complete the process.');
            
            // Reset button
            sendBtn.innerHTML = originalBtnText;
            sendBtn.disabled = false;
        }, 1000);
        
        return true;
    }
    
    // Add click event to the send button
    sendBtn.addEventListener('click', sendToWhatsAppAuto);
    
    // Also allow form submission with Enter key
    form.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            e.preventDefault();
            sendToWhatsAppAuto();
        }
    });
    
    // Auto-submit form when all fields are filled and user presses Enter on last field
    const messageField = document.getElementById('message');
    messageField.addEventListener('keydown', function(e) {
        if (e.key === 'Enter' && e.ctrlKey) { // Ctrl+Enter to send
            e.preventDefault();
            sendToWhatsAppAuto();
        }
    });
});



       





