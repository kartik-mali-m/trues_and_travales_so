            text-decoration: none;
            color: inherit;
            display: block;
            position: relative;
            overflow: hidden;
            transform-style: preserve-3d;
        }

        .action-card-3d::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(118, 75, 162, 0.1));
            opacity: 0;
            transition: opacity 0.3s ease;
        }

