@{
    ViewData["Title"] = "Privacy Policy";
}
<h1>@ViewData["Title"]</h1>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Privacy Policy | Tour & Travel Cab Services</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Poppins', sans-serif;
            background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
            color: #333;
            line-height: 1.6;
            min-height: 100vh;
            padding: 20px;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
        }

        /* Header Styles */
        .privacy-header {
            text-align: center;
            padding: 60px 20px;
            background: linear-gradient(rgba(255, 255, 255, 0.9), rgba(255, 255, 255, 0.9)), 
                        url('data:image/svg+xml;utf8,<svg xmlns="http://www.w3.org/2000/svg" width="100" height="100" viewBox="0 0 100 100"><path d="M0,0 L100,0 L100,100 Z" fill="%2342b883" opacity="0.1"/></svg>');
            border-radius: 20px;
            margin-bottom: 40px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
            position: relative;
            overflow: hidden;
            animation: fadeIn 1s ease-out;
        }

        .privacy-header::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 5px;
            background: linear-gradient(90deg, #42b883, #2c3e50, #42b883);
            background-size: 200% 100%;
            animation: shimmer 3s infinite linear;
        }

        .header-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 3.5rem;
            font-weight: 700;
            color: #2c3e50;
            margin-bottom: 20px;
            position: relative;
            display: inline-block;
        }

        .header-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: linear-gradient(90deg, #42b883, #2c3e50);
            border-radius: 2px;
        }

        .header-subtitle {
            font-size: 1.2rem;
            color: #666;
            max-width: 600px;
            margin: 0 auto;
        }

        /* Content Styles */
        .privacy-content {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 30px;
            margin-bottom: 60px;
        }

        .privacy-card {
            background: white;
            border-radius: 15px;
            padding: 30px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            border: 1px solid rgba(66, 184, 131, 0.1);
            animation: slideUp 0.6s ease-out;
            animation-fill-mode: both;
        }

        .privacy-card:nth-child(1) { animation-delay: 0.1s; }
        .privacy-card:nth-child(2) { animation-delay: 0.2s; }
        .privacy-card:nth-child(3) { animation-delay: 0.3s; }
        .privacy-card:nth-child(4) { animation-delay: 0.4s; }
        .privacy-card:nth-child(5) { animation-delay: 0.5s; }
        .privacy-card:nth-child(6) { animation-delay: 0.6s; }

        .privacy-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 30px rgba(0, 0, 0, 0.15);
        }

        .card-icon {
            width: 70px;
            height: 70px;
            background: linear-gradient(135deg, #42b883, #2c3e50);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 20px;
            color: white;
            font-size: 1.8rem;
            animation: bounce 2s infinite;
        }

        .card-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 1.5rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 15px;
            position: relative;
            padding-bottom: 10px;
        }

        .card-title::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 0;
            width: 40px;
            height: 3px;
            background: #42b883;
            border-radius: 2px;
        }

        .card-content {
            color: #666;
            font-size: 0.95rem;
        }

        /* Highlights Section */
        .highlights {
            background: white;
            border-radius: 15px;
            padding: 40px;
            margin-bottom: 40px;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.08);
            animation: fadeIn 1s ease-out 0.7s both;
        }

        .highlights-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 2rem;
            font-weight: 600;
            color: #2c3e50;
            margin-bottom: 30px;
            text-align: center;
        }

        .highlight-list {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            list-style: none;
        }

        .highlight-item {
            display: flex;
            align-items: flex-start;
            gap: 15px;
            padding: 15px;
            background: #f8f9fa;
            border-radius: 10px;
            transition: all 0.3s ease;
        }

        .highlight-item:hover {
            background: #e9ecef;
            transform: translateX(5px);
        }

        .highlight-icon {
            color: #42b883;
            font-size: 1.2rem;
            margin-top: 3px;
        }

        /* Contact Section */
        .contact-section {
            background: linear-gradient(135deg, #42b883, #2c3e50);
            color: white;
            border-radius: 15px;
            padding: 50px;
            text-align: center;
            margin-bottom: 40px;
            animation: fadeIn 1s ease-out 0.9s both;
        }

        .contact-title {
            font-family: 'Montserrat', sans-serif;
            font-size: 2.2rem;
            font-weight: 600;
            margin-bottom: 20px;
        }

        .contact-text {
            font-size: 1.1rem;
            margin-bottom: 30px;
            opacity: 0.9;
        }

        .contact-info {
            display: flex;
            justify-content: center;
            gap: 30px;
            flex-wrap: wrap;
        }

        .contact-item {
            display: flex;
            align-items: center;
            gap: 10px;
            padding: 15px 25px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 50px;
            transition: all 0.3s ease;
        }

        .contact-item:hover {
            background: rgba(255, 255, 255, 0.2);
            transform: translateY(-5px);
        }

        .contact-icon {
            font-size: 1.2rem;
        }

        /* Car Animation */
        .car-animation {
            text-align: center;
            margin: 40px 0;
            position: relative;
            height: 100px;
            overflow: hidden;
        }

        .car {
            position: absolute;
            font-size: 3rem;
            color: #2c3e50;
            left: -100px;
            animation: drive 10s linear infinite;
        }

        .road {
            position: absolute;
            bottom: 40px;
            left: 0;
            right: 0;
            height: 4px;
            background: #666;
            border-radius: 2px;
        }

        .road::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 2px;
            background: repeating-linear-gradient(
                90deg,
                transparent,
                transparent 20px,
                white 20px,
                white 40px
            );
            animation: roadMove 1s linear infinite;
        }

        /* Last Updated */
        .last-updated {
            text-align: center;
            padding: 20px;
            color: #666;
            font-size: 0.9rem;
            animation: fadeIn 1s ease-out 1s both;
        }

        .update-badge {
            display: inline-block;
            background: #42b883;
            color: white;
            padding: 5px 15px;
            border-radius: 20px;
            font-size: 0.8rem;
            margin-left: 10px;
            animation: pulse 2s infinite;
        }

        /* Animations */
        @@keyframes fadeIn {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes bounce {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-10px);
            }
        }

        @@keyframes shimmer {
            0% {
                background-position: -200% 0;
            }
            100% {
                background-position: 200% 0;
            }
        }

        @@keyframes drive {
            0% {
                left: -100px;
                transform: rotateY(0deg);
            }
            49% {
                transform: rotateY(0deg);
            }
            50% {
                left: 100%;
                transform: rotateY(180deg);
            }
            99% {
                transform: rotateY(180deg);
            }
            100% {
                left: -100px;
                transform: rotateY(0deg);
            }
        }

        @@keyframes roadMove {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(-40px);
            }
        }

        @@keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.7;
            }
        }

        /* Responsive Design */
        @@media (max-width: 768px) {
            .privacy-header {
                padding: 40px 20px;
            }

            .header-title {
                font-size: 2.5rem;
            }

            .privacy-content {
                grid-template-columns: 1fr;
            }

            .contact-info {
                flex-direction: column;
                align-items: center;
            }

            .contact-item {
                width: 100%;
                max-width: 300px;
            }

            .car {
                font-size: 2.5rem;
            }
        }

        @@media (max-width: 480px) {
            .header-title {
                font-size: 2rem;
            }

            .privacy-card {
                padding: 20px;
            }

            .highlights, .contact-section {
                padding: 30px 20px;
            }
        }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="privacy-header">
            <h1 class="header-title">
                <i class="fas fa-shield-alt"></i> Privacy Policy
            </h1>
            <p class="header-subtitle">
                Your privacy and security are our top priority. This policy outlines how we collect, use, and protect your information while using our cab services.
            </p>
        </header>

        <!-- Car Animation -->
        <div class="car-animation">
            <div class="car">
                <i class="fas fa-car-side"></i>
            </div>
            <div class="road"></div>
        </div>

        <!-- Privacy Content Cards -->
        <div class="privacy-content">
            <div class="privacy-card">
                <div class="card-icon">
                    <i class="fas fa-user-shield"></i>
                </div>
                <h2 class="card-title">Information Collection</h2>
                <div class="card-content">
                    <p>We collect information necessary to provide our services, including:</p>
                    <ul style="padding-left: 20px; margin-top: 10px;">
                        <li>Personal details (name, email, phone)</li>
                        <li>Booking and travel history</li>
                        <li>Payment information (securely encrypted)</li>
                        <li>Location data for ride tracking</li>
                        <li>Device information for app optimization</li>
                    </ul>
                </div>
            </div>

            <div class="privacy-card">
                <div class="card-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h2 class="card-title">Data Usage</h2>
                <div class="card-content">
                    <p>Your information helps us:</p>
                    <ul style="padding-left: 20px; margin-top: 10px;">
                        <li>Process bookings and payments</li>
                        <li>Provide real-time ride tracking</li>
                        <li>Improve service quality</li>
                        <li>Send booking confirmations</li>
                        <li>Personalize your experience</li>
                        <li>Ensure driver and rider safety</li>
                    </ul>
                </div>
            </div>

            <div class="privacy-card">
                <div class="card-icon">
                    <i class="fas fa-lock"></i>
                </div>
                <h2 class="card-title">Data Protection</h2>
                <div class="card-content">
                    <p>We implement robust security measures:</p>
                    <ul style="padding-left: 20px; margin-top: 10px;">
                        <li>End-to-end encryption for all data</li>
                        <li>Secure payment gateways</li>
                        <li>Regular security audits</li>
                        <li>Limited employee access</li>
                        <li>Data anonymization where possible</li>
                        <li>Compliance with international standards</li>
                    </ul>
                </div>
            </div>

            <div class="privacy-card">
                <div class="card-icon">
                    <i class="fas fa-share-alt"></i>
                </div>
                <h2 class="card-title">Third-Party Sharing</h2>
                <div class="card-content">
                    <p>We only share data with trusted partners:</p>
                    <ul style="padding-left: 20px; margin-top: 10px;">
                        <li>Payment processors (for transactions)</li>
                        <li>Map and location services</li>
                        <li>Customer support platforms</li>
                        <li>Legal authorities (when required)</li>
                        <li>Analytics for service improvement</li>
                    </ul>
                    <p style="margin-top: 10px;">We never sell your personal information.</p>
                </div>
            </div>

            <div class="privacy-card">
                <div class="card-icon">
                    <i class="fas fa-cookie-bite"></i>
                </div>
                <h2 class="card-title">Cookies & Tracking</h2>
                <div class="card-content">
                    <p>We use cookies and similar technologies:</p>
                    <ul style="padding-left: 20px; margin-top: 10px;">
                        <li>Essential cookies for app functionality</li>
                        <li>Analytics cookies for improvement</li>
                        <li>Preference cookies for personalization</li>
                        <li>Security cookies for protection</li>
                    </ul>
                    <p style="margin-top: 10px;">You can control cookies through your browser settings.</p>
                </div>
            </div>

            <div class="privacy-card">
                <div class="card-icon">
                    <i class="fas fa-user-edit"></i>
                </div>
                <h2 class="card-title">Your Rights</h2>
                <div class="card-content">
                    <p>You have the right to:</p>
                    <ul style="padding-left: 20px; margin-top: 10px;">
                        <li>Access your personal data</li>
                        <li>Correct inaccurate information</li>
                        <li>Request data deletion</li>
                        <li>Opt-out of marketing communications</li>
                        <li>Data portability</li>
                        <li>Withdraw consent</li>
                    </ul>
                </div>
            </div>
        </div>

        <!-- Highlights Section -->
        <section class="highlights">
            <h2 class="highlights-title">Key Privacy Features</h2>
            <ul class="highlight-list">
                <li class="highlight-item">
                    <i class="fas fa-check-circle highlight-icon"></i>
                    <span>Industry-standard SSL encryption for all data transfers</span>
                </li>
                <li class="highlight-item">
                    <i class="fas fa-check-circle highlight-icon"></i>
                    <span>Regular privacy audits and security updates</span>
                </li>
                <li class="highlight-item">
                    <i class="fas fa-check-circle highlight-icon"></i>
                    <span>Transparent data usage policies</span>
                </li>
                <li class="highlight-item">
                    <i class="fas fa-check-circle highlight-icon"></i>
                    <span>No hidden data collection practices</span>
                </li>
                <li class="highlight-item">
                    <i class="fas fa-check-circle highlight-icon"></i>
                    <span>Easy-to-use privacy controls in your account</span>
                </li>
                <li class="highlight-item">
                    <i class="fas fa-check-circle highlight-icon"></i>
                    <span>24/7 security monitoring and threat detection</span>
                </li>
            </ul>
        </section>

        <!-- Contact Section -->
        <section class="contact-section">
            <h2 class="contact-title">Questions About Privacy?</h2>
            <p class="contact-text">
                Our dedicated privacy team is here to help you understand how we protect your data and address any concerns you may have.
            </p>
            <div class="contact-info">
                <div class="contact-item">
                    <i class="fas fa-envelope contact-icon"></i>
                    <span>privacy@tourservice.com</span>
                </div>
                <div class="contact-item">
                    <i class="fas fa-phone contact-icon"></i>
                    <span>+1 (800) 123-4567</span>
                </div>
                <div class="contact-item">
                    <i class="fas fa-clock contact-icon"></i>
                    <span>Mon-Fri, 9AM-6PM EST</span>
                </div>
            </div>
        </section>

        <!-- Last Updated -->
        <div class="last-updated">
            <p>
                Last Updated: December 15, 2024
                <span class="update-badge">Updated Recently</span>
            </p>
            <p style="margin-top: 10px;">
                <i class="fas fa-info-circle" style="margin-right: 5px;"></i>
                We regularly review and update this policy to ensure compliance with regulations and best practices.
            </p>
        </div>
    </div>

    <script>
        // Animation for cards on scroll
        document.addEventListener('DOMContentLoaded', function() {
            // Add scroll animation for cards
            const cards = document.querySelectorAll('.privacy-card');
            
            const observer = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.style.animationPlayState = 'running';
                    }
                });
            }, { threshold: 0.1 });

            cards.forEach(card => {
                observer.observe(card);
            });

            // Car animation speed control
            const car = document.querySelector('.car');
            document.addEventListener('scroll', function() {
                const scrollY = window.scrollY;
                const speed = Math.max(10, 30 - scrollY / 100);
                car.style.animationDuration = speed + 's';
            });

            // Add hover effect to contact items
            const contactItems = document.querySelectorAll('.contact-item');
            contactItems.forEach(item => {
                item.addEventListener('mouseenter', function() {
                    this.style.transform = 'translateY(-5px) scale(1.05)';
                });
                item.addEventListener('mouseleave', function() {
                    this.style.transform = 'translateY(0) scale(1)';
                });
            });

            // Update current year in footer if needed
            const yearElement = document.querySelector('.current-year');
            if (yearElement) {
                yearElement.textContent = new Date().getFullYear();
            }
        });

        // Add smooth scrolling for anchor links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                const target = document.querySelector(this.getAttribute('href'));
                if (target) {
                    target.scrollIntoView({
                        behavior: 'smooth',
                        block: 'start'
                    });
                }
            });
        });
    </script>
</body>
</html>