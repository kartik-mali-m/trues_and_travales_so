        <!-- Quick Links -->
        <div class="quick-links">
            <p style="margin-bottom: 15px; font-weight: 500;">Quick Navigation:</p>
            <div class="links-container">
                <a asp-controller="Home" asp-action="Index" class="nav-link">
                    <i class="fas fa-home"></i> Home
                </a>
                <a asp-controller="Home" asp-action="About" class="nav-link">
                    <i class="fas fa-info-circle"></i> About Us
                </a>
                <a asp-controller="Cab" asp-action="Index" class="nav-link">
                    <i class="fas fa-car"></i> Book Cab
                </a>
